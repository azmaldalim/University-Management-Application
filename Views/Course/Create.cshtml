@model UniversityManagementSystemWebApplication.Models.Course

@{
    ViewBag.Title = "Create New Course";
    ViewBag.Active = "Course";
}

<h2>Create New Course</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*<link href="~/Content/Message.css" rel="stylesheet" />*@
<div class="form-horizontal">
    @using (Html.BeginForm()) {
              @Html.ValidationSummary(true)

              <fieldset>
                  <legend>Course</legend>
                <div class="control-group">
                <div class="control-label">
                      @Html.LabelFor(model => model.Code)
                  </div>
                  <div class="controls">
                      @Html.EditorFor(model => model.Code)
                      @Html.ValidationMessageFor(model => model.Code)
                  </div>

                  <div class="control-label">
                      @Html.LabelFor(model => model.Name)
                  </div>
                  <div class="controls">
                      @Html.EditorFor(model => model.Name)
                      @Html.ValidationMessageFor(model => model.Name)
                  </div>

                  <div class="control-label">
                      @Html.LabelFor(model => model.Credit)
                  </div>
                  <div class="controls">
                      @Html.EditorFor(model => model.Credit)
                      @Html.ValidationMessageFor(model => model.Credit)
                  </div>

                  <div class="control-label">
                      @Html.LabelFor(model => model.Description)
                  </div>
                  <div class="controls">
                      @Html.TextAreaFor(model => model.Description)
                      @Html.ValidationMessageFor(model => model.Description)
                  </div>

                  <div class="control-label">
                      @Html.LabelFor(model => model.DepartmentId, "Department")
                  </div>
                  <div class="controls">
                      @Html.DropDownList("DepartmentId", String.Empty)
                      @Html.ValidationMessageFor(model => model.DepartmentId)
                  </div>

                  <div class="control-label">
                      @Html.LabelFor(model => model.SemesterId, "Semester")
                  </div>
                  <div class="controls">
                      @Html.DropDownList("SemesterId", String.Empty)
                      @Html.ValidationMessageFor(model => model.SemesterId)
                  </div>

                    <div class="controls">
                        <input type="submit" value="Create" class="btn"/>
                    </div>
                </div>
                  <div class="alert-success">@ViewBag.Message</div>
              </fieldset>
          }
</div>
<ul class="pager">
    <li class="previous">
    @Html.ActionLink("Back to Course List", "Index")
    </li>
</ul>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
