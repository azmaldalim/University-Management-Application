<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title -University Management System</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />

        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container-fluid">
            <div id="header" class="row-fluid">
                <div id="title">
                    <h1>
                        <img src="~/Images/University_Logo.png" />    University Management System
                    </h1>
                </div>
                @*<div id="logindisplay">
                    @Html.Partial("_LoginPartial")
                </div>*@
            </div>
            <div id="" class="row-fluid">
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container-fluid">
                            <button class="btn btn-navbar" type="button" data-target=".nav-collapse" data-toggle="collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <div class="nav-collapse collapse">
                                <ul class="nav">
                                    <li class="@(ViewBag.Active == "Home" ? "active" : "")">
                                        @Html.ActionLink("Home", "Index", "Home")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Department" ? "active" : "")">
                                        @Html.ActionLink("Department", "Index", "Department")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Student" ? "active" : "")">
                                        @Html.ActionLink("Student", "Index", "Student")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Course" ? "active" : "")">
                                        @Html.ActionLink("Course", "Index", "Course")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Enrollment" ? "active" : "")">
                                        @Html.ActionLink("Enrollment", "Index", "Enrollment")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "View Course State" ? "active" : "")">
                                        @Html.ActionLink("View Course State", "Index", "ViewCourseState")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Class Room Allocation" ? "active" : "")">
                                        @Html.ActionLink("Class Room Allocation", "Index", "RoomAllocation")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Teacher" ? "active" : "")">
                                        @Html.ActionLink("Teacher", "Index", "Teacher")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "About" ? "active" : "")">
                                        @Html.ActionLink("About", "About", "Home")
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li class="@(ViewBag.Active == "Contact" ? "active" : "")">
                                        @Html.ActionLink("Contact", "Contact", "Home")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="" class="row-fluid">
            @RenderSection("featured", required: false)
            <section class="row-fluid">
                @RenderBody()
            </section>
        </div>
        <div id="footer" class="row-fluid">  
            <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
        </div>
         <script src="@Url.Content("~/Scripts/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
